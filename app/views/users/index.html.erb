<header class="header-image">
  <div class="headline">
      <div class="container">
          <h2>LEADERBOARD</h2>
      </div>
  </div>

</header>


<div class="container">
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Points</th>
      </tr>
    </thead>

    <% @users.each_with_index do |user, index| %>

      <tbody>
        <tr>
          <td><%= index + 1%></td>
          <td><%= image_tag(user.image, class: "img-circle") %><%= user.real_name %></td>
          <td><%= user.points %></td>
        </tr>
      </tbody>

    <% end %>
  </table>
</div>